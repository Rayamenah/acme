generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invoice {
  id              Int      @id @default(autoincrement())
  sequenceNumber  String   @unique
  date            DateTime
  customerName    String
  customerAddress String
  subtotal        Float
  total           Float
  createdAt       DateTime @default(now())

  items InvoiceItem[]

  @@map("invoices")
}

model InvoiceItem {
  id           Int    @id @default(autoincrement())
  productCode  String
  description  String
  pricePerUnit Float
  quantity     Int
  lineTotal    Float

  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  invoiceId Int

  @@map("invoice_items")
}
